{
  "specVersion": "1.0",
  "site": {
    "name": "My Store",
    "url": "https://example.com",
    "description": "An online store selling handmade ceramics",
    "contact": "hello@example.com"
  },
  "capabilities": [
    {
      "id": "product-search",
      "endpoint": "https://example.com/api/search",
      "method": "GET",
      "protocol": "REST",
      "auth": { "type": "none" },
      "rateLimit": { "requests": 60, "window": "minute" },
      "description": "Search the product catalog by keyword",
      "parameters": [
        { "name": "q", "in": "query", "type": "string", "required": true, "description": "Search query" },
        { "name": "limit", "in": "query", "type": "integer", "description": "Max results, default 20" }
      ]
    },
    {
      "id": "browse-products",
      "endpoint": "https://example.com/api/products",
      "method": "GET",
      "protocol": "REST",
      "auth": { "type": "none" },
      "rateLimit": { "requests": 120, "window": "minute" },
      "description": "Browse all products with pagination",
      "parameters": [
        { "name": "page", "in": "query", "type": "integer", "description": "Page number, default 1" },
        { "name": "limit", "in": "query", "type": "integer", "description": "Items per page, default 20" },
        { "name": "category", "in": "query", "type": "string", "description": "Filter by category" }
      ]
    },
    {
      "id": "contact",
      "endpoint": "https://example.com/api/contact",
      "method": "POST",
      "protocol": "REST",
      "auth": { "type": "none" },
      "rateLimit": { "requests": 5, "window": "minute" },
      "description": "Send a message to the site owner"
    }
  ],
  "access": {
    "allow": ["/api/*"],
    "disallow": ["/admin/*", "/checkout/*"]
  },
  "agents": {
    "*": {
      "rateLimit": { "requests": 60, "window": "minute" },
      "capabilities": ["product-search", "browse-products", "contact"]
    },
    "claude": {
      "rateLimit": { "requests": 200, "window": "minute" },
      "capabilities": ["product-search", "browse-products", "contact"]
    },
    "gpt": {
      "rateLimit": { "requests": 200, "window": "minute" },
      "capabilities": ["product-search", "browse-products", "contact"]
    }
  }
}
