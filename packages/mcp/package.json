  "repository": {
    "type": "git",
    "url": "https://github.com/kaylacar/agents-txt.git",
    "directory": "packages/mcp"
  },
  "homepage": "https://github.com/kaylacar/agents-txt",
  "bugs": {
    "url": "https://github.com/kaylacar/agents-txt/issues"
